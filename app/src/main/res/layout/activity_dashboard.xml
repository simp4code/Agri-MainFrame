<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="#006600"
    android:orientation="vertical">
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/removelogo"/>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="180dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="60dp">
       <ImageView
           android:id="@+id/user_icon"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000">
                <TextView
                    android:fontFamily="monospace"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, "/>
                <TextView
                    android:id="@+id/google_name"
                    android:fontFamily="monospace"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
           <androidx.cardview.widget.CardView
               android:backgroundTint="#77b300"
               app:cardCornerRadius="20dp"
               app:cardElevation="15dp"
               android:layout_width="350dp"
               android:layout_height="180dp">
               <TextView
                   android:background="#446600"
                   android:textStyle="bold"
                   android:textColor="#fff"
                   android:textSize="16sp"
                   android:fontFamily="monospace"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Weather today(PH)"/>

               <TextView
                   android:id="@+id/temp_result"
                   android:textColor="#fff"
                   android:fontFamily="monospace"
                   android:textSize="16sp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text=""/>
           </androidx.cardview.widget.CardView>
            <LinearLayout

                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sell_crops"
                    android:backgroundTint="#fff"
                    app:cardElevation="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/clock"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DAILY TASK"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/app_inventory"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#fff"
                    app:cardElevation="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/invento"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INVENTORY"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:id="@+id/addbtn"
                android:clickable="true"
                android:src="@drawable/addt"
                android:backgroundTint="#99e600"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_main_link"
                    android:text="@string/hyperlink"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>